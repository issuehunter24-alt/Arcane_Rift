{
  "name": "gals-cardgame-web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node ./node_modules/vite/bin/vite.js --host --strictPort --port 5173",
    "build": "node ./node_modules/typescript/bin/tsc -b && node ./node_modules/vite/bin/vite.js build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "prepare:png": "powershell -ExecutionPolicy Bypass -File ../Scripts/PrepareWebAssets.ps1 -Root ..",
    "convert:webp": "powershell -ExecutionPolicy Bypass -File ../Scripts/ConvertCardsToWebP.ps1 -Root .. -Quality 85",
    "assets": "npm run prepare:png && npm run convert:webp",
    "dev:full": "npm run assets && vite",
    "build:full": "npm run assets && tsc -b && vite build",
    "build:zip": "powershell -ExecutionPolicy Bypass -File ../Scripts/BuildStatic.ps1 -Root .. -OutZip dist.zip",
    "preview:dist": "vite preview --host --strictPort --port 4173",
    "validate:data": "node ./scripts/validateCards.js",
    "prune:cards": "node ./scripts/pruneCardsToAssets.js",
    "sync:cards": "npm run prune:cards && npm run validate:data"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.80.0",
    "pixi.js": "^8.2.1",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@vitest/ui": "^1.5.0",
    "jsdom": "^27.1.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vitest": "^1.5.0"
  }
}
